// ===================================================================================================================
// Sections
// ===================================================================================================================

// Section paddings
.striped-section
	&:not(:last-of-type)
		padding-bottom 3rem // 48px
	&:not(:first-of-type)
		padding-top 3rem // 48px

// Section color
.striped-section:nth-child(odd)
	position relative
	background $brand-2




// ===================================================================================================================
// Advantages
// ===================================================================================================================

.advantages
	@extend .d-flex
	margin-top 32px
	width 100%
	// Adaptive
	justify-content start
	flex-wrap wrap
	//flex-direction column
	+media(sm)
		flex-direction row
		justify-content space-around
	+media(md)
		flex-wrap nowrap
	
.advantage
	height 100%
	align-items center
	// Adaptive
	padding 1rem 1rem 0 0 // 8px
	+media(md)
		padding 0
	//+media(lg)
	//	padding 8px
	
	// Advantage icons
	&__img
		margin-right 8px
		width 30px
		height @width
		background-size 100%
		background-repeat no-repeat
		background-position 50% 50%
		
	// Advantage text
	&__text
		vertical-align middle




// ===================================================================================================================
// Portfolio
// ===================================================================================================================

.work-card
	display block
	background $brand-white
	box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.25)
	margin-bottom 32px
	&__img
			width 100%
			background-size cover
			background-position 0 50%
			background-repeat no-repeat
			// Adaptive
			height 251px
			+media(sm)
				height 300px
			+media(lg)
				height 230px
	&__caption
		padding 0.5rem 0 0.5rem 0.5rem // 8px
		&__name
			display inline-block
			thin-underline()
		&__desc
			font-size $font-size-sm
			color alpha($brand-1, 65%)




// ===================================================================================================================
// Lists
// ===================================================================================================================

.knowledge-list
	li
		margin-left 0.5rem // 8px
		padding-left 1rem // 8px
		list-style none
		background-image url('/imgs/marker-squared.svg')
		background-repeat no-repeat
		background-position 0 10px
		background-size 7px
		// Для bg-position
		//+media(md)
		//	background-position 0 8px

.tools
	margin-left 2rem // 32px




// ===================================================================================================================
// Hero card
// ===================================================================================================================

.hero-card
	background $brand-white
	&-inf
		padding 2.5rem 2rem 0 2rem !important // 40px 32px

// Hero photo
.hero-photo
	@extends .img-fluid




// ===================================================================================================================
// Timeline
// ===================================================================================================================

.xp-card
	position relative
	&:not(:last-of-type)
		margin-bottom 1.5rem // 24rem
	&__col-1
		width 110px
		text-align right
	&__name
		font-weight bold
	&__date
		margin-right 0.5rem // 8px
		padding 0 2px
		display inline-block
		position relative
		white-space nowrap
		color #9d8bff // ???????????
		border 1px solid #9d8bff // ???????????
	&__desc
		font-size $font-size-md
		color $brand-light-gray
		// Margin after paragraph in experience and education block
		& p
			margin-bottom 0
			
	// Line
	&:not(:last-of-type):before
		content ''
		display block
		position absolute
		top 29px
		bottom -24px
		left 9%
		width 1px
		background-color #9d8bff // ???????????
	// Arrow
	&:not(:last-of-type) .xp-card__date:after
		content ''
		display block
		position absolute
		top 30px
		right 14px
		padding 3px
		border solid #9d8bff // ???????????
		border-width 0 1px 1px 0
		transform rotate(-135deg)




// ===================================================================================================================
// Contacts
// ===================================================================================================================

.contact-sprite
	list-style none

// Contact icons
.contact-link__icon
	padding-left 0.5rem // 8px
	&:before
		link-icon($width: 28px, $height: $width, $bg-img: url('../imgs/icons/contact-sprite.svg'), $bg-size: auto 28px)
	&--mail:before
		background-position 0 0
	&--telegram:before
		background-position-x -27px
	&--skype:before
		background-position-x -56px
	&--fb:before
		background-position-x -84px
	&--hh:before
		background-position-x -112px
	&--github:before
		background-position-x -141px
	&--fl:before
		background-position-x -169px
	&:hover
		background-position-y -52px
	
	
	
	
	
	
	
