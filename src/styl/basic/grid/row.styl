$row-styles
	padding 0
	display flex
	flex 0 1 100%
	flex-direction row
	flex-wrap wrap
	list-style none




.row
	@extend $row-styles
	&:last-child
		margin-bottom 0
.row
	margin-left - ($grid-gutter-width-base/2)
	margin-right - ($grid-gutter-width-base/2)




// Without margins
.row--no-gutters
.row2--no-gutters
	@extend $row-styles
	margin 0
	[class*="col--"]
		padding 0




// Spacing between columns
.row2
	@extend $row-styles
	margin-left -5px
	margin-right -5px
	div[class*='col--']
		padding-left 5px
		padding-right 5px
