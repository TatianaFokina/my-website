// ===================================================================================================================
// Clearfix
// ===================================================================================================================

.clearfix
.cf
	clearfix()

.clear
	clear both




// ===================================================================================================================
// Display & positioning
// ===================================================================================================================

// Display
.d-none
	display none !important
.d-inline
	display inline !important
.d-inline-block
	display inline-block !important
.d-block
	display block !important
.d-table
	display table !important
.d-table-cell
	display table-cell !important
.d-flex
	display flex
.d-inline-flex
	display inline-flex !important




// Positioning
.fixed-top
	position fixed
	top 0
	right 0
	left 0
	z-index 999

.fixed-bottom
	position fixed
	right 0
	bottom 0
	left 0
	//z-index

.sticky-top
	position sticky
	top 0
	//z-index




// ===================================================================================================================
// Visibility utilities
// ===================================================================================================================

.invisible
	invisible()

// Responsive visibility utilities
for $name, $w in $breakpoints
	.hidden-{$name}-up
		+media-breakpoint-up($name,$w)
			display none !important
	.hidden-{$name}-down
		+media-breakpoint-down($name,$w)
			display none !important




// ===================================================================================================================
// Buttons reset
// ===================================================================================================================

.btn-reset
	padding 0
	border 0
	cursor pointer
