.nav
	@extend .d-flex
	flex-wrap wrap
	flex-grow 1
	justify-content space-between
	
	// Adaptive for all nav items
	margin-right -1rem
	margin-bottom 1rem // 16px
	+media(sm)
		margin-right 1rem
	+media(md)
		margin-bottom 0
		flex-wrap nowrap
	
	// Adaptive for drop-down menu
	flex-direction column
	align-items flex-end
	+media(sm)
		flex-direction row




// ===================================================================================================================
// Navigation links
// ===================================================================================================================
	
// links
.nav-item
	display block
	flex 1 0
	text-align center
	white-space nowrap
	// Adaptive
	padding 1rem // 16px
	+media(md)
		padding 0
	
	// Github link
	&__github
		// Adaptive
		//margin-top 2rem // 32px ????????????????????????????
		//padding-left 0
		//padding-right 0
		+media(sm)
			margin-top 0 // ???????????????
			//margin-left 2rem // 32px ???????????????????????
		+media(md)
			//margin-left 8rem // 128px
			margin-top 0 // ????????????????
		//+media(lg)
		//	padding 0 3rem // 48px
		&:before
			margin-right 0.5rem // 8px
			link-icon($width: 25px, $height: $width, $bg-img: url('../imgs/icons/ico-github.svg'), $bg-size: cover)
	
	a
		&:after
			height 1px
			width 0
			display block
			content ''
			background-color lighten($brand-1, 80%)
			transition width .2s ease-in-out
			&:focus
				color lighten($brand-1, 60%)
		&:hover:after,
		&:focus:after
			width 100%
		&:hover
			color lighten($brand-1, 10%)
			background  alpha($brand-1, 25%)

.nav-wrp
	+media(sm)
		display block !important // фиксит баг с исчезновением пунктов меню при сворачивании/разворачивании




// ===================================================================================================================
// Mobile menu
// ===================================================================================================================

.hamburger
	height 30px
	width 30px
	position absolute
	top 22px
	right 16px
	background $brand-white url('../imgs/icons/ico-hamburger.svg') no-repeat 50% 50%
	background-size 35px
	border none
	border-radius 3px
	z-index 999
	&.in
		background-color lighten($brand-1, 80%)
	// Expand & collapse hamburger icon
	+media(sm)
		display none

// Expand & collapse
.js-expand-block
	display none
	flex-grow 1
	align-self flex-end
	transition max-height .7s, visibility .7s
	overflow hidden // Expand & collapse menu items
	+media(sm)
		align-self center
	+media(sm)
		max-height unset
		display flex
		align-items inherit
