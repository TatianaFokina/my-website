@import '../mixins/mixins__custom.styl'
$modal-header__bg=#ddd

// ===============================
// Универсальные свойства, которые можно применить к другим модальным окнам или на других проектах
// ===============================
.modal-container
	display none
	position fixed
	top 0
	left 0
	height 100%
	width 100%
	z-index 9990
	overflow auto
	background alpha(#424242, 0.95)
	text-align center
	white-space nowrap
	overflow-x hidden
	&:before
		display inline-block
		vertical-align middle
		height 100%
		
		// Адаптивное
		+media(md)
			content ''
			
		
.modal
	display inline-block
	vertical-align middle
	//margin 0 auto
	z-index 9998
	text-align left
	white-space normal
	background #fff
	color $body-color
	box-shadow 0 0 20px rgba(0, 0, 0, 0.6)

	// Адаптивное
	+media(sm)
		margin 15px
	
	
	
	&__header
		position relative // для кнопки "закрыть"
	&__title
		position: relative;
		background $modal-header__bg
		//	font-size 1.2rem
		@extend h3
		margin: 0
		padding 15px
	&__close-btn
		position absolute
		top 0
		right 0
		width 50px
		height 100%
		background: darken($modal-header__bg, 6) no-repeat 50% 50% svg-load('../imgs/close.svg');
		background-size 18px
		border 0
		cursor pointer
		z-index 9999