@import '../mixins/mixins__custom.styl'

$modal-header__bg = #e0e0e0
$modal-header__bg--hover = darken($modal-header__bg, 5%)
:root
	--modal__padding: 16px
+media(md)
	:root
		--modal__padding: 24px




// ===================================================================================================================
// Универсальные свойства, которые можно применить к другим модальным окнам или на других проектах
// ===================================================================================================================

.modal-container
	display none
	justify-content center
	align-items flex-start
	position fixed
	top 0
	left 0
	height 100%
	width 100%
	z-index 9990
	background $brand-1--3 //alpha(#424242, 0.95)
	overflow-x hidden
	cursor pointer

.modal
	width 100%
	max-width $last-width
	min-height: 1500px
	position: relative
	white-space normal
	background $brand-white
	box-shadow 0 0 20px rgba(0, 0, 0, 0.6)
	cursor default

	// Адаптивное
	/*+media(lg)
		margin-top 1rem*/

	// Modal header
	&__header
		padding-left var(--modal__padding)
		height 8px * 5
		position sticky
		top 0 // for 'sticky'
		@extend .d-flex
		align-items center
		background $modal-header__bg
	&__title
		margin 0
		position relative
		font-size $font-size-h3 // 21px
	
	
	
		
	&__pager
		@extend .d-flex
		height 100%
		margin 0 2vw 0 auto
		&__prev
		&__next
			width: 50px
			height 100%
			@extend .btn-reset
			background no-repeat 50% 50% svg-load('../imgs/icons/pager-arrow.svg')
			background-size auto 1rem
			flex 1 0 auto
			cursor pointer
		&__prev
			transform rotate(180deg)
	
	// Close button
	&__close-btn
		font-size 1.313rem // 21px
		width 50px
		height 100%
		@extend .btn-reset
		background no-repeat 50% 50% svg-load('../imgs/icons/close.svg')
		background-size 19px
		
	&__pager__prev
	&__pager__next
	&__close-btn
		outline 0
		&:hover
			background-color $modal-header__bg--hover
		&:active
			//background-color hsl(hue($brand-1), 20, lightness($modal-header__bg--hover))
			background-color darken($modal-header__bg--hover, 10%)
			
		
	// Header of content block
	&__content-header
		padding calc(var(--modal__padding) - 8px) var(--modal__padding)
		font-size $font-size-sm // 13px
		background lighten($modal-header__bg, 35%)
		
	// Content
	&__content
		padding var(--modal__padding)