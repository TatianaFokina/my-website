$btn-bg = $brand-1
$color-text-btn = $brand-white

.js-scroll-to-top
	height 50px
	width @height
	@extend .btn-reset
	display block
	position fixed
	bottom 10px
	right 10px
	text-align center
	font-size 1.3rem
	line-height 1
	color alpha($color-text-btn, 80%)
	background alpha($btn-bg, 60%)
	border-radius 50%
	box-shadow 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.3)
	transition background .2s ease, box-shadow .2s ease
	z-index 500
	&:hover
		background $btn-bg
		color alpha($color-text-btn, 100)
		box-shadow 0 2px 2px 0 rgba(0,0,0,0.09), 0 1px 5px 0 rgba(0,0,0,0.07), 0 3px 1px -2px rgba(0,0,0,0.1)
